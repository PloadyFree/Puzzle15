<UserControl x:Class="Puzzle15.GUI.ButtonPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             DataContext="{Binding RelativeSource={RelativeSource self}}"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Puzzle15.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Border BorderThickness="5" BorderBrush="{Binding Path=BorderColor}" Background="{Binding Path=BackgroundColor}">
        <TextBlock
            Margin="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Foreground="{Binding Path=TitleForeground}"
            Text="{Binding Path=Title}"
            FontSize="{Binding Path=TitleSize}"/>
    </Border>
</UserControl>
